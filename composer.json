{
    "name": "cospirit/hal-rest-client",
    "description": "This is an HTTP client based on guzzle to consume HAL REST API",
    "keywords": ["API", "REST", "HAL", "HTTP", "client"],
    "homepage": "https://github.com/cospirit/hal-rest-client",
    "type": "library",
    "authors": [
        {
            "name": "CoSpirit",
            "email": "dsi.poledev@cospirit.com"
        }
    ],

    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/cospirit/hal-navigator.git"
        }
    ],

    "autoload": {
        "psr-4": { "CoSpirit\\HAL\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "Test\\CoSpirit\\HAL\\": "tests/" }
    },

    "require": {
        "php": "^8.1",
        "rize/uri-template": "~0.3",
        "cospirit/hal-navigator": "^2.0",
        "guzzlehttp/guzzle": "^7.5"
    },

    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/phpstan": "^1.10"
    },

    "config": {
        "bin-dir": "bin"
    }
}
